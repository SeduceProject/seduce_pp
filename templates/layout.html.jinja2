<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="{{ url_for("static", filename="img/picloud.ico") }}">

    <title>Baremetal RaspberryPi as a service</title>

    <!-- Bootstrap core CSS -->
    <link href="{{ url_for("static", filename="css/bootstrap.min.css") }}" rel="stylesheet">
    <link href="{{ url_for("static", filename="css/default.css") }}" rel="stylesheet">

    {% block css %}
    {% endblock %}
  </head>

  <body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-dark bg-dark">
        <div>
            <a class="navbar-brand" href="{{ url_for("app.home") }}">
                <img src="{{ url_for("static", filename="img/logo.png") }}" width="45" height="30"
                    class="d-inline-block align-top" alt="">
                PiSeduce
            </a>
        </div>
        <div class="m-auto centered-menu">
          {% if current_user.is_authenticated %}
              <a class="btn btn-outline-info text-light btn-size d-inline-block ml-2 mr-2"
                  href="{{ url_for("app.home") }}">
                  Home
              </a>
              <a class="btn btn-outline-info text-light btn-size d-inline-block ml-2 mr-2"
                  href="{{ url_for("app.resources") }}">
                  Resources
              </a>
              <a class="btn btn-outline-info text-light btn-size d-inline-block ml-2 mr-2"
                  href="{{ url_for("app.deployments") }}">
                  Deployments
              </a>
              <a class="btn btn-outline-info text-light btn-size d-inline-block ml-2 mr-2"
                  href="{{ url_for("app.user") }}">
                  Settings
              </a>
            {% if current_user.is_admin %}
              <a class="btn btn-outline-warning text-light btn-size d-inline-block ml-2 mr-2"
                  href="{{ url_for("app.admin") }}">
                  Admin
              </a>
            {% endif %}
              <a class="btn btn-outline-danger text-light btn-size d-inline-block ml-2 mr-2"
                  href="{{ url_for("login.logout") }}">
                  Logout
              </a>
          {% else %}
              <a class="btn btn-outline-info btn-size text-light d-inline-block ml-2 mr-2"
                  href="{{ url_for("login.login") }}">
                  Sign in
              </a>
          {% endif %}
        </div>
    </nav>
    <br/>
    <main role="main" class="container">
      {% block content %}
      {% endblock %}
    </main>

    <script src="{{ url_for("static", filename="js/jquery-3.3.1.js") }}"></script>
    <script src="{{ url_for("static", filename="js/popper.min.js") }}"></script>
    <script src="{{ url_for("static", filename="js/bootstrap.min.js") }}"></script>
    <script src="{{ url_for("static", filename="js/holder.min.js") }}"></script>

    {% block js %}
    {% endblock %}
  </body>
</html>
